<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <!--  <style name="Theme.ASA_App3" parent="Base.Theme.ASA_App3" /> -->

    <style name="Base.Theme.SplashScreenLogo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SplashScreenLogo" parent="Base.Theme.SplashScreenLogo" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <!-- Customize your light theme here. -->
        <item name="windowSplashScreenBackground">@color/gold</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splashscreenlogo</item>
        <item name="postSplashScreenTheme">@style/Theme.SplashScreenLogo</item>
    </style>

</resources>